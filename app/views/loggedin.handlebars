{{>sidebar}}
<div class="content maxheight">
    <div class="maxheight">
        <div class="col-8 offset-2 maxheight">
            <h1 class="text-center">My files</h1>
            <form id="uploadform" class="maxheight">

                <table class="table">
                    <thead>
                        <tr>
                        <th scope="col">Filename</th>
                        <th scope="col">Uploaded on</th>
                        <th scope="col">Size</th>
                        <th scope="col" class="text-center">Options</th>
                        </tr>
                    </thead>
                    <tbody id="filelist">
                    </tbody>
                </table>

                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"></h5>
                        <button type="button" class="close stop-playback" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">

                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary stop-playback" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>

                <p id="out" class="text-center"></p>
                <input type="hidden" accept="image/*">
            </form>

        </div>
    </div>
</div>
