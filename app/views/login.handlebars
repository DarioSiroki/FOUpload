<div class="login-form">
    <div class="form-group">
      <label>Email address</label>
      <input id="lemail" type="email" class="form-control" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input id="lpw" type="password" class="form-control" placeholder="Password">
    </div>
    <p id="login-msg" class="auth-error"> &nbsp </p>
    <button id="ls" type="submit" class="btn btn-primary">Login</button>
</div>

<div class="register-form">
    <div class="form-group">
      <label>Email address</label>
      <input id="remail" type="email" class="form-control" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label>Username</label>
      <input id="username" type="username" class="form-control" placeholder="Enter username">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input id="pw1" type="password" class="form-control"  placeholder="Password">
    </div>
    <div class="form-group">
      <label>Repeat password</label>
      <input id="pw2" type="password" class="form-control"  placeholder="Password">
    </div>
    <p id="register-msg" class="auth-error"> &nbsp </p>
    <button id="rs" type="submit" class="btn btn-primary">Register</button>
</div>
<script src="js/user.js"> </script>
